<?php
	# VIEW HTML	

	# CONTENT
	$html_content = '';
	switch($permissions) {
		
		case ($permissions>=1) :
				
				# ETIQUETA (LABEL)
				if (!isset($this->print_options->show_label) || $this->print_options->show_label==true) {
				$html_content .= "<div class=\"print_label {$component_name}_print_label\">$label</div>";
				}
				
				# CONTENT (DATO)
				$html_content .= "<div class=\"print_content {$component_name}_print_content\">$valor</div>";
				break;
	}

	# PRINT HTML
	print $html_content;