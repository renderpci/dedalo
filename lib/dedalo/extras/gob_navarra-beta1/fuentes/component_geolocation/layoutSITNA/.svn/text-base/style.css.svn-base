#controls {
	position: absolute;
	left: 0;
	top: 10px;
	left: 10px;
	width: 350px;
	z-index: 10000;
    opacity: 0.8;
}

.tc-ctl {
	background-color: #eff;
    padding: 0;
}

.tc-ctl-attrib {
	background-color: transparent;
}

.tc-ctl h2 {
    color: #369;
    background-color: #fd4;
    border-bottom: 2px solid #ec3;
    text-transform: none;
}

.tc-ctl-legend-title {
    color: #369;
}

.tc-ctl-legend-branch .tc-ctl-legend-branch {
    background-color: #fff;
    border: 1px solid #369;
}

.tc-ctl-legend-branch .tc-ctl-legend-branch .tc-ctl-legend-branch {
    border: none;
}

ul.tc-ctl-toc-branch {
    background: none;
}

li.tc-ctl-toc-node {
    font-family: Arial, helvetica, sans-serif;
    margin: 0;
    padding: 0 20px;
    padding-right: 0;
    line-height: 1.5em;
    background: url(img/node.png) no-repeat;
}

li.tc-ctl-toc-node > span {
    background-color: transparent;
}

li.tc-ctl-toc-node input[type=checkbox] {
    float: left;
    width: 1em;
    height: 1em;
    margin-top: 0.2em;
}

li.tc-ctl-toc-node input[type=checkbox].tc-ctl-toc-branch-cb {
    float: left;
    width: 1.1em;
    height: 1.1em;
}

li.tc-ctl-toc-leaf {
    background: none;
    font-size: 0.8em;
}

li.tc-ctl-legend-node {
    font-family: Arial, helvetica, sans-serif;
    font-weight: bold;
    margin-top: 0.5em;
    padding: 10px;
    border: none;
    border-radius: 0.3em;
    font-size: 0.85em;
}

li.tc-ctl-legend-node li.tc-ctl-legend-node {
    font-weight: normal;
    border: 0;
}

li.tc-ctl-toc-node.tc-collapsed {
    background: url(img/node-collapsed.png) no-repeat;
}

li.tc-ctl-toc-node-notvisible {
    color: #aaa;
}

ul.tc-ctl-toc-branch li.tc-ctl-toc-node:last-child {
     background: transparent url(img/node.png) no-repeat;
}

ul.tc-ctl-toc-branch li.tc-ctl-toc-node.tc-collapsed:last-child {
     background: transparent url(img/node-collapsed.png) no-repeat;
}

ul.tc-ctl-toc-branch li.tc-ctl-toc-leaf:last-child {
    background: none;
}

.tc-ctl-load {
	background-color: transparent;
}

.tc-ctl-lm-dots {
    visibility: hidden;
}

.tc-ctl-lm-bar {
	height: 20px;
    background-color: transparent;
	background-image: url(img/loading.gif);
}

.tc-ctl-load-dots {
    background-color:#369;
}